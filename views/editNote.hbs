{{!< layout}}

<section>
    <header>
        <h2>{{title}}</h2>
    </header>
    <form method="post" action="/save">

        <input type="hidden" name="_id" value="{{note._id}}"/>

        <div>
            <label class="editNoteLabel" for="title">Title</label>
            <input id="title" name="title" type="text" required value="{{note.title}}"/>
        </div>

        <div>
            <label class="editNoteLabel" for="description">Description</label>
            <textarea id="description" name="description">{{note.description}}</textarea>
        </div>

        <div>
            <label class="editNoteLabel" for="importance">Importance</label>
            <input id="importance" name="importance" type="number" min="1" max="5" required
                   value="{{note.importance}}"/>
        </div>

        <div>
            <label class="editNoteLabel" for="dueDate">Due Date</label>
            <input id="dueDate" name="dueDate" type="date" required placeholder="YYYY-MM-DD" pattern="\d{4}-\d{2}-\d{2}"
                   value="{{formatDate note.dueDate}}"/>
        </div>

        <div>
            <label class="editNoteLabel" for="finished">Finished</label>
            <input id="finished" name="finished" type="checkbox" {{#if note.finished}}checked{{/if}}>
        </div>

        <div>
            <button type="reset" onclick="window.location.href='/'">Cancel</button>
            <button type="submit">Save</button>
        </div>
    </form>
</section>
